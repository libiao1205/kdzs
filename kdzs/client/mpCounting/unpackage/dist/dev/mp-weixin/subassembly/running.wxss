
.running_box{
	height:300rpx;
	position: absolute;
	left:0;
}
.title-msg{
	color:#FFFFFF;
	font-weight: 600;
	width: 18rpx;
	word-wrap: break-word; 
	word-break: normal;
	z-index:100;
}
.running-img{
	width:300rpx;
	height:300rpx;
}
.progress{
	position: absolute;
	left: 10rpx;
	top: 8%;
	width:26rpx;
	height: 650rpx;
	border-radius:26rpx;
	background-color: #ccced4;
}
.progress .progress_bar{
	position: absolute;
	border-radius:26rpx;
	width:100%;
	background-color: rgb(255, 73, 73);
}

